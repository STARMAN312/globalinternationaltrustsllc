@model EditUserVM

<link href="~/css/createUser.css" rel="stylesheet">

<div class="mt-2">
	<div class="card bg-gray-200 bd-0">
		<div class="card-body">
			<h5 class="tx-dark tx-medium mg-b-10">Edit the client's information</h5>
			@if (!ViewData.ModelState.IsValid)
			{
					<div class="card bg-warning text-white">
						<div class="card-body d-flex align-items-center p-3">
							<i class="fas fa-exclamation-circle me-2"></i>
							<div asp-validation-summary="ModelOnly" class="validation-summary-no-bullets flex-grow-1"></div>
						</div>
					</div>
			}
			<form asp-action="Edit" enctype="multipart/form-data">
				<input type="hidden" asp-for="Id" />
				<div>
					<div class="form-group">
						<label for="InputID" class="form-label" id="usernameLabel">User Name</label>
						<input asp-for="UserName" type="text" class="form-control">
					</div>
					<div class="form-group">
						<label for="InputID" class="form-label" id="usernameLabel">Full Name</label>
						<input asp-for="FullName" type="text" class="form-control">
					</div>
					<div class="form-group">
						<label for="InputPassword" class="form-label" id="passwordLabel">Address</label>
						<input asp-for="Address" type="text" class="form-control">
					</div>
					<div class="form-group">
						<label for="InputPassword" class="form-label" id="passwordLabel">Work Email</label>
						<input asp-for="WorkEmail" type="text" class="form-control">
					</div>
					<div class="form-group">
						<label class="form-label">Personal Email</label>
						<input asp-for="PersonalEmail" type="text" class="form-control">
					</div>
					<div class="form-group">
						<label class="form-label">Work Phone</label>
						<input asp-for="WorkPhone" type="text" class="form-control">
					</div>
					<div class="form-group">
						<label class="form-label">Personal Phone</label>
						<input asp-for="PersonalPhone" type="text" class="form-control">
					</div>
					@if (Model.ExistingFiles?.Any() == true)
					{
						<h4>Uploaded Files</h4>
						<ul>
							@foreach (var file in Model.ExistingFiles)
							{
								<li>
									@file.FileName
								</li>
							}
						</ul>
					}
					<div class="form-group">
						<label class="form-label">Personal Phone</label>
						<input type="file" asp-for="Files" multiple />
					</div>
				</div>
				<div class="form-group mb-0 mt-3 justify-content-end">
					<div>
						<button type="submit" class="btn btn-success px-5">Edit Client</button>
						<button asp-controller="Users" asp-action="Index" class="btn btn-danger ms-4 px-5">Cancel</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>